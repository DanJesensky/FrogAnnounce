<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>me.thelunarfrog</groupId>
	<artifactId>FrogAnnounce</artifactId>
	<version>2.2.0-R0.2-SNAPSHOT</version>

	<!-- Build Settings -->
	<build>
		<resources>
			<!--Main -->
			<resource>
				<targetPath>main/java/me/thelunarfrog/FrogAnnounce</targetPath>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/java/me/thelunarfrog/FrogAnnounce</directory>
				<includes>
					<include>FrogAnnounce.java</include>
					<include>FrogAnnounceAPI.java</include>
					<include>ConfigurationHandler.java</include>
					<include>ChatColourManager.java</include>
				</includes>
				<excludes>
				</excludes>
			</resource>
			<!--Configuration.yml -->
			<resource>
				<targetPath>main/resources</targetPath>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>Configuration.yml</include>
				</includes>
				<excludes>
				</excludes>
			</resource>
			<!--plugin.yml -->
			<resource>
				<targetPath></targetPath>
				<filtering>false</filtering>
				<directory>${basedir}/src/main/resources</directory>
				<includes>
					<include>plugin.yml</include>
				</includes>
				<excludes>
				</excludes>
			</resource>
		</resources>
	</build>

	<dependencies>
		<!--Bukkit -->
		<dependency>
			<groupId>org.bukkit</groupId>
			<artifactId>bukkit</artifactId>
			<version>1.4.5-R0.2</version>
			<type>jar</type>
		</dependency>
		<!--Vault - Optional -->
		<dependency>
			<groupId>net.milkbowl.vault</groupId>
			<artifactId>Vault</artifactId>
			<version>1.2.22-SNAPSHOT</version>
			<type>jar</type>
			<optional>true</optional>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>bukkit-repo</id>
			<url>http://repo.bukkit.org/content/groups/public</url>
		</repository>
		<repository>
			<id>vault-repo</id>
			<url>http://ci.herocraftonline.com/plugin/repository/everything</url>
		</repository>
	</repositories>

	<!-- More Project Information -->
	<name>FrogAnnounce</name>
	<description>An automatic announcement plugin for Minecraft Bukkit servers.</description>
	<url>http://mc.grminecraft.org:8080/jenkins/job/FrogAnnounce/</url>
	<inceptionYear>2011</inceptionYear>
</project>